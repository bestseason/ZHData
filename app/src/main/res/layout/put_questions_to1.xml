<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/mainColor">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7.39"
            android:gravity="center"
            android:text="提问"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/put_questions_to_tx3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="下一步"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7.39"
        android:background="@android:color/white"
        android:padding="20dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/put_questions_to_edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_style_color"
            android:ems="10"
            android:hint="请输入标题"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/put_questions_to_edit2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/put_questions_to_edit1"
            android:layout_marginTop="20dp"
            android:layout_weight="1.69"
            android:background="@android:color/white"
            android:ems="10"
            android:gravity="top"
            android:hint="添加问题的补充说明"
            android:inputType="textMultiLine"
            android:maxLines="30"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>