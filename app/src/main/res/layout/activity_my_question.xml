<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_question_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.zhdata.android.zhapp.MyAnswerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/mainColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_my_question_img1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:scrollbarSize="5dp"
            android:src="@drawable/arrow_left_white" />

        <TextView
            android:id="@+id/activity_my_question_tx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.88"
            android:gravity="center_vertical"
            android:text="我的提问"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/activity_my_question_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
